{
  "name": "api",
  "version": "1.0.0",
  "description": "An express app that interacts with the db, serves the API for UI layers, and handle business logic.",
  "scripts": {
    "dev": "npm run db:dev:up && npm run docs:generate && tsx --watch --env-file .env src/server.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node NODE_ENV=production dist/src/server.js",
    "// // 1": "",
    "check:type": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "// // 2": "",
    "db:dev:up": "docker compose up -d",
    "db:dev:down": "docker compose down",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "db:migrate": "prisma migrate dev",
    "docs:generate": "tsx scripts/generate-swagger-files.ts",
    "// // 3": "",
    "postinstall": "npm run docs:generate && npm run db:generate ",
    "clean": "npx rimraf dist **/generated logs node_modules docs .env .env.*"
  },
  "type": "module",
  "dependencies": {
    "@anatine/zod-openapi": "^2.2.8",
    "@prisma/client": "^6.7.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "http-status-codes": "^2.3.0",
    "morgan": "^1.10.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.24.4",
    "swagger-jsdoc": "^6.2.8"
  },
  "imports": {
    "#*": "./src/*/index.js"
  },
  "devDependencies": {
    "eslint": "^9.26.0",
    "eslint-plugin-perfectionist": "^4.12.3",
    "js-yaml": "^4.1.0",
    "openapi3-ts": "^4.4.0",
    "prisma": "^6.7.0",
    "prisma-erd-generator": "^2.0.4",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1",
    "vitest": "^3.1.2",
    "swagger-ui-express": "^5.0.1",
    "@eslint/js": "^9.26.0",
    "@mermaid-js/mermaid-cli": "^11.4.2",
    "@tsconfig/node22": "^22.0.1",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.1",
    "@types/js-yaml": "^4.0.9",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.15.14",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^3.1.2",
    "@vitest/eslint-plugin": "^1.1.44"
  }
}
